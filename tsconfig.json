{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "watch": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "baseUrl": ".",
  "paths": {
    "*": ["node_modules/*", "src/types/*"]
  }
}
